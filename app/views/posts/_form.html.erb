  </div>

  <div>
    <%= form.label :link, style: "display: block" %>
    <%= form.text_field :link %>
  </div>


  <div>
    <%= form.label :hashtag, style: "display: block" %>
    <%= form.text_field :hashtag %>
  </div>

  <div>
    <%= form.submit %>
  </div>
